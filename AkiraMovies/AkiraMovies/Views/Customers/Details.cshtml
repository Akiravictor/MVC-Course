@model AkiraMovies.Models.CustomerModels
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

@{ 
	if(Model == null)
	{
		<p>Oh no, the customer you are trying to search does not exist!</p>
	}
	else
	{
		<h3>@Model.Name</h3>

        <li>Membership Type: @Model.MembershipType.Name</li>

        if (Model.Birthdate.HasValue)
        {
            <li>Birthdate: @Model.Birthdate.Value.ToString("dd/MM/yyyy")</li>
        }
	}
}

